<Page x:Class="TechServicePractice.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TechServicePractice"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="StartPage" >

    <Grid>
        <Label Name="LogoLabel" Content="ТЕХНОСЕРВИС" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,200" FontSize="50" Foreground="White"/>
        <Button Name="SignInButton" Content="Вход" Grid.Row="2" HorizontalAlignment="Center" FontWeight="Bold" Click="SingInButtonHandler"/>
        <Button Name="SignUpButton" Content="Регистрация" Grid.Row="2" HorizontalAlignment="Center" Margin="0,90,0,0" FontWeight="Bold" Click="SignUpButtonHandler" />
    </Grid>
</Page>
